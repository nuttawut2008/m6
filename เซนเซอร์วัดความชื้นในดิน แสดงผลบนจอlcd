#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2);
#define Apin A2
#define LED 13
void setup()
{
pinMode(Apin, INPUT);
pinMode(LED, OUTPUT);
Serial.begin(9600);
  lcd.init(); lcd.clear(); lcd.backlight();
lcd.setCursor(0,0);
lcd.print("Sensor : LDR ");
lcd.setCursor(0,1);
lcd.print("Value : ");
}
void loop()
{
int value = analogRead(Apin);
Serial.println(value);
lcd.setCursor(0,1);
lcd.print("Value : ");
lcd.setCursor(8,1);
lcd.print(value);
if (value>=320)
{
digitalWrite(LED, HIGH);
}
else
{
digitalWrite(LED, LOW);
}
delay(1000);
}
